generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ThemeType {
  LIGHT
  DARK
  AUTO
}

enum LangType {
  PT_BR
  EN_US
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  password_hash String
  theme         ThemeType @default(AUTO)
  lang          LangType  @default(EN_US)
  created_at    DateTime  @default(now())
  Checkin       Checkin[]

  @@map("user")
}

model Checkin {
  id           String    @id @default(uuid())
  created_at   DateTime  @default(now())
  validated_at DateTime?

  user    User   @relation(fields: [user_Id], references: [id])
  user_Id String

  gyn    Gyn    @relation(fields: [gyn_Id], references: [id])
  gyn_Id String

  @@map("check_in")
}

model Gyn {
  id          String    @id @default(uuid())
  title       String
  description String?
  phone       String?
  latitude    Decimal
  longitude   Decimal
  Checkin     Checkin[]

  @@map("gym")
}
